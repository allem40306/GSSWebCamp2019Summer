@model Course04.Models.Book
@{
    ViewBag.Title = "修改書籍";
}

<h2>修改書籍</h2>

@using (Html.BeginForm("QueryBook", "Book", FormMethod.Post, new { id = "QueryForm" }))
{

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.BookName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BookName, new { @class = "form-control", @Value = ViewBag.SearchResult[0].BookName })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookAuthor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BookAuthor, new { @class = "form-control", @Value = ViewBag.SearchResult[0].BookAuthor })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookPublisher, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BookPublisher, new { @class = "form-control", @Value = ViewBag.SearchResult[0].BookPublisher })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookNote, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BookNote, new { @class = "form-control", @Value = ViewBag.SearchResult[0].BookNote })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BuyDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BuyDate, new { @class = "form-control", @Value = ViewBag.SearchResult[0].BuyDate })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookClass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BookClass, new { @class = "form-control", @Value = ViewBag.SearchResult[0].BookClass })
            </div>
        </div>

    </div>
}